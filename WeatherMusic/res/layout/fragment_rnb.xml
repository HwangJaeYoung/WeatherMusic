<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outerRelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <com.fatdog.WeatherMusic.reuse.etc.CircularImageView
        android:id="@+id/iv_rnb_album_cover"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/init_cover" />

    <Button
        android:id="@+id/bt_rnb_play_pause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bt_play"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/pb_rnb_music_loading"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

       <Button
        android:id="@+id/bt_rnb_next"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="85dp"
        android:layout_toRightOf="@id/bt_rnb_play_pause"
        android:background="@drawable/bt_next"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_rnb_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="#9e9e9e"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/tv_rnb_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_rnb_track"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="#9e9e9e"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" >
    </RelativeLayout>

    <SeekBar
        android:id="@+id/sb_rnb_music_seekbar"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:progressDrawable="@drawable/seekbar_progress"
        android:thumb="@drawable/circle_thumb"
        android:visibility="invisible" />
"

    <Button
        android:id="@+id/bt_rnb_like"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bt_like" />

    <Button
        android:id="@+id/bt_rnb_list"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bt_list" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sb_rnb_music_seekbar"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_rnb_playing_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:text="--:--"
            android:textColor="#9e9e9e"
            android:textSize="15sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_rnb_music_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:text="--:--"
            android:textColor="#9e9e9e"
            android:textSize="15sp"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>